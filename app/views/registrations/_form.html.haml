=form_for @registrant do |f|
  =render 'shared/error_messages', :target => @registrant
  =f.label :name
  =f.text_field :name
  %br/
  =f.label :email
  =f.text_field :email
  %br/
  =f.label :password
  =f.password_field :password
  %br/
  =f.label :password_confirmation, "Confirmation"
  =f.password_field :password_confirmation
  %br/
  %br/
  =f.submit button_name